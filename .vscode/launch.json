    "version": "0.2.0",
    "configurations": [
        {
            "name": "(LLDB) Launch",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "-p",
                    "host"
                ],
            },
            "args": [
                "--list-all-steps"
            ],
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "sourceLanguages": [
                "rust"
            ],
            "preLaunchTask": "build debug"
        },
    ]
}